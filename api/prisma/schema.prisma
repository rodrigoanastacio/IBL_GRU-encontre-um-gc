generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model GC {
  id       String  @id @default(uuid())
  title    String
  leaders  String
  contact  String
  data     String
  time     String
  isOnline Boolean
  isCouple Boolean

  addressDetails AddressDetails?
  coordinates    Coordinates?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("gcs")
}

model AddressDetails {
  id           String  @id @default(uuid())
  street       String?
  number       String?
  neighborhood String?
  city         String
  state        String
  country      String

  gc   GC     @relation(fields: [gcId], references: [id], onDelete: Cascade)
  gcId String @unique

  @@map("address_details")
}

model Coordinates {
  id  String @id @default(uuid())
  lat Float?
  lng Float?

  gc   GC     @relation(fields: [gcId], references: [id], onDelete: Cascade)
  gcId String @unique

  @@map("coordinates")
}
